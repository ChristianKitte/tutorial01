<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".MainActivity">

    <TextView
            android:id="@+id/txtIntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-condensed"
            android:orientation="horizontal"
            android:text="@string/deautlText"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.085"/>

    <Button
            android:id="@+id/btnNextPage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="184dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="btnNextPage"
            android:text="@string/button01Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIntroText"/>

    <Button
            android:id="@+id/btnNextPage2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="256dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:onClick="btnNextPage2"
            android:text="@string/button01Text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtIntroText" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:id="@+id/btnClose"
            android:text="@string/appCloseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btnClosePressed"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"/>
    <fragment
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:name="de.ckitte.tutorial01.myFragment"
            android:id="@+id/fragment" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/txtIntroText"
            android:layout_marginTop="40dp" app:layout_constraintHorizontal_bias="0.105"/>

</androidx.constraintlayout.widget.ConstraintLayout>
